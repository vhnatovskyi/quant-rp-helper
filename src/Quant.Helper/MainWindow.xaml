<Window x:Class="Quant.Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quant.Helper"
        Title="Quant Helper" Height="200" Width="300" Topmost="True" AllowsTransparency="True"
        WindowStyle="None" Background="#7F5D5D5D" Foreground="White">
    <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Q" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,5" Foreground="#FFFFEA00"/>
        <TextBlock Text="uant" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="12,0,0,5"/>
        <Button Click="Exit_Click" Content="✖" Width="30" Height="25" FontSize="16" HorizontalAlignment="Right"
            VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" Foreground="White"
            FontWeight="Bold" ToolTip="Close"/>
        <Grid Margin="0,30,0,5" RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ListBox SelectionChanged="ScriptList_SelectionChanged" x:Name="ScriptList" DisplayMemberPath="Name"
               Grid.Column="0" Margin="0,0,10,0" Background="#66FFFFFF" Foreground="Black"/>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Активний Сценарій" FontWeight="Bold"/>
                <TextBlock x:Name="ActiveScriptLabel" Text="Відсутній" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel x:Name="ActionPanel" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Collapsed">
                    <Button Click="Execute_Click" x:Name="ExecuteButton" Content="Запустити" Width="80"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <ListBox x:Name="LogList" Grid.Row="2" Height="70" Margin="0,0,0,0" FontFamily="Consolas" FontSize="10"
             Background="#44FFFFFF" Foreground="Black"/>
    </Grid>
</Window>